<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <div>Your form has <%= pluralize(object.errors.count, 'error') %></div>
      <ul>
        <% object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
