<%if @story %>
  <div class="artwork">
    <div class="container-image"> 
      <% @playlist.tracks.each do |track| %>
        <%if track.id == @story_at_sc.id %>
         <img class="container-image" src="<%=
          artwork = @story_at_sc.artwork_url
          if artwork == nil
            artwork = @story_at_sc.user.avatar_url
          end 
          artwork.sub! "large", "crop"
           %>">
        <% end %>
      <% end %>
      <div class="play-button">
         <span class="glyphicon glyphicon-play-circle"></span>
      </div>
    </div>
  </div>

  <div class="container-like-button">
      <div id="likebutton" class="like"></br>
        <%= button_to "like", upvote_story_path(@story), {form_class: "button-like", :id => "like_button", method: :post} %>
      </div>
      <div id="votes" class="vote">
        <%= @story.votes.count %>
      </div>
  </div>

  <div class="story-place"> 
      <% @place = Place.find_by(@story.sc_track) %>
      <% if @place != nil %>
      <%= @place.name %>
      <% end %>
  </div>

  <div class="container-fluid">
    <h4>Hear more stories:</h4> 
      <% @playlist.tracks.each do |track| %>
        <% if track.id != @story_at_sc.id %>
          <a href="/playlists/<%=@playlist.id%>/<%=track.id%>" data-no-turbolink><%= track.title %></a></br>
        <% end %>
      <% end %><br>
  </div>

<script>
  var story = {
    id: <%= @story.id %>   
  }
  var storyAtSC = {
     id: <%= @story_at_sc.id %> 
  }
 
</script>

<%= render partial: "create_comments" %>
<%else%>
    <h1>Oops! We couldn't find this story, try again!! </h1>
<%end%>
