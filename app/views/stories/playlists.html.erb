
<% @playlist.tracks.each do |track| %>
  <%if track.id == @story.id %>
      <iframe width="100%" height="345" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/<%=track.id %>&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false&amp;visual=true&amp;sharing=false"></iframe>

  <% end %>
<% end %>

